<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/ivory"
    tools:context=".RegistrationActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="30dp">

            <View
                android:layout_width="350dp"
                android:layout_height="570dp"
                android:layout_marginTop="60dp"
                android:background="@color/white" />

            <Button
                android:id="@+id/btnSimpan"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="650dp"
                android:backgroundTint="@color/antique"
                android:text="Simpan"
                android:textAllCaps="false"
                android:textColor="#FFF"
                android:textColorHint="@color/black"
                android:textSize="18sp"
                tools:ignore="TouchTargetSizeCheck" />

            <EditText
                android:id="@+id/editUsername"
                android:layout_width="280dp"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="110dp"
                android:digits="abcdefghijklmnopqrstuvwxyz1234567890"
                android:hint="Masukkan Username Anda"
                android:inputType="textFilter"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textColorHint="@color/black"
                tools:ignore="TouchTargetSizeCheck" />

            <EditText
                android:id="@+id/editPassword"
                android:layout_width="280dp"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="200dp"
                android:hint="Masukkan Password Anda"
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textColorHint="@color/black"
                tools:ignore="TouchTargetSizeCheck" />

            <EditText
                android:id="@+id/editEmail"
                android:layout_width="280dp"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="300dp"
                android:hint="Masukkan Email Anda"
                android:inputType="textEmailAddress"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textColorHint="@color/black"
                tools:ignore="TouchTargetSizeCheck" />

            <EditText
                android:id="@+id/editNamaLengkap"
                android:layout_width="280dp"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="400dp"
                android:hint="Masukkan Nama Lengkap Anda"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textColorHint="@color/black"
                tools:ignore="TouchTargetSizeCheck" />

            <EditText
                android:id="@+id/editAsalSekolah"
                android:layout_width="280dp"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="490dp"
                android:hint="Masukkan Asal Sekolah Anda"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="16sp"
                tools:ignore="TouchTargetSizeCheck" />

            <EditText
                android:id="@+id/editAlamat"
                android:layout_width="280dp"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="580dp"
                android:gravity="top|left"
                android:hint="Masukkan Alamat Anda"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="16sp"
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="140dp"
                android:text="Sign Up"
                android:textColor="#000"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="80dp"
                android:text="Username"
                android:textColor="#000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="170dp"
                android:text="Password"
                android:textColor="#000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="270dp"
                android:text="Email"
                android:textColor="#000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="370dp"
                android:text="Nama Lengkap"
                android:textColor="#000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="460dp"
                android:text="Asal Sekolah"
                android:textColor="#000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="550dp"
                android:textStyle="bold"
                android:text="Alamat Tinggal"
                android:textColor="#000"
                android:textSize="18sp" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>